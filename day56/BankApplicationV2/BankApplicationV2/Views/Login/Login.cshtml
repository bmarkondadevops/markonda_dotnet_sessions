@model LoginDTO

@*
<h4 class="centered-header">@Model.HeaderTitle</h4>*@

<div class="centered-form">
    <form asp-action="Login" asp-controller="Login">
        <table>
            <tr>
                <td>Name</td>
                <td><input asp-for="Name" /></td>
            </tr>
            <tr>
                <td>Password</td>
                <td><input asp-for="Password" type="password" /></td>
            </tr>

            <tr>
                <td></td>
                <td><input type="submit" value="Login" /></td>
            </tr>
        </table>
        
    </form>
</div>



<style>
    .centered-form {
        margin: 0 auto;
        width: 300px; /* Adjust the width as needed */
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

        .centered-form input {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

            .centered-form input[type="submit"] {
                background-color: #4CAF50; /* Green color */
                color: white;
                border: none;
                border-radius: 5px;
                cursor: pointer;
            }

                .centered-form input[type="submit"]:hover {
                    background-color: #3e8e41; /* Darker green on hover */
                }

        .centered-form label {
            display: block;
            margin-bottom: 5px;
            color: #333; /* Darker text color */
        }





    

    .centered-header {
        text-align: center;
        color: #008000; /* Green color */
    }
</style>