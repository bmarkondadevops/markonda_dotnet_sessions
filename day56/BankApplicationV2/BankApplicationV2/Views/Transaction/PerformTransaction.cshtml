@model BankApplicationV2.DTOs.AccountTransactionDTO


@{
    ViewBag.Title = "Perform Transaction";
}

<h2>Perform Transaction</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <table class="table table-bordered table-hover">
        <tr>
            <th>Account Master Id</th>
            <td>
                @Html.HiddenFor(model => model.AccountMasterId)
                @Html.DisplayFor(model => model.AccountMasterId)
            </td>
        </tr>
        <tr>
            <th>Name</th>
            <td>
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <th>Amount</th>
            <td>
                @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <th>Transaction Type</th>
            <td>
                @Html.DropDownListFor(model => model.TransactionType,
                         new SelectList(new[] { "Deposit", "Withdrawal" }, "Deposit"),
                         "Select Transaction Type",
                         new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TransactionType, "", new { @class = "text-danger" })
            </td>
        </tr>

        <tr>
            <td colspan="2" class="text-center">
                <input type="submit" value="Perform Transaction" class="btn btn-primary" />
            </td>
        </tr>
    </table>
}

<p><a href="@Url.Action("TransactionHistory", "Transaction", new { accountMasterId = Model.AccountMasterId })">View Transaction History</a></p>