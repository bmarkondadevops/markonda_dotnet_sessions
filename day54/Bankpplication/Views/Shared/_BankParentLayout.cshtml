﻿
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.ChildTitle</title>
	
	<script src="~/lib/jquery/jquery.min.js"></script>
	<script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>

    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" href="@Url.Action("Index", "Home")">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "About")">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Contact")">Contact Us</a>
                    </li>
                </ul>

                <!-- User Authentication Links (Optional) -->
                <ul class="navbar-nav ms-auto">
                    {
                    <li class="nav-item">
                        <a class="nav-link" @Html.ActionLink("Login", "Login", "Login", null, new { @class = "btn btn-primary" }))"></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" @Html.ActionLink("Registration", "Add", "Registration", null, new { @class = "btn btn-primary" })"></a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>
    <!-- Main Content -->
    <div class="container mt-4">
        @RenderBody()
    </div>
    <nav class="navbar bg-body-tertiary">
        <div class="container">
            <a class="navbar-brand" href="#">
                <img src="~/images/redapple.jpg" alt="MyImage" width="1200" height="1000">
            </a>
        </div>
    </nav>



    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3 mt-5">
        <p>&copy; @DateTime.Now.Year - MyApp</p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    

    
    @*Below code for Email validation*@
    @*
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/js/site.js"></script>      
    @await RenderSectionAsync("Scripts", required: false)
    *@

</body>
</html>